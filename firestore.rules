rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read user profiles for the directory.
    // Only allow authenticated users to write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create tasks.
    // Allow anyone to read tasks.
    // Allow the task poster to update/delete, or a freelancer to show interest.
    match /tasks/{taskId} {
      allow create: if request.auth != null;
      allow read: if true;
      // Allow update if user is the client OR if they are only updating the interestedCount
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.clientId ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['interestedCount'])
      );
      allow delete: if request.auth != null && request.auth.uid == resource.data.clientId;
    }

    // Allow authenticated users to show interest in a task.
    match /intrested/{interestId} {
      allow read, create: if request.auth != null;
    }
  }
}
