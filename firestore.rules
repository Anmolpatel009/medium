
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read user profiles for the directory.
    // Allow only authenticated users to write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create tasks,
    // allow anyone to read tasks,
    // allow the task poster to update and delete their own tasks.
    // Note: The document ID for the poster must be `posterId` for this to work.
    match /tasks/{taskId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.clientId;
    }

    // Allow authenticated users to create an "interest" document.
    match /intrested/{interestId} {
      allow read, create: if request.auth != null;
    }

  }
}
